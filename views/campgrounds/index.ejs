<%- layout("layouts/boilerplate") %>
    <h1>キャンプ場一覧</h1>
    <div>
        <a href="/campgrounds/new">新規登録をする</a>
    </div>
        <% for(campground of campgrounds) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(campground.images && campground.images.length) {%>
                        <img  class="img-fluid" src="<%= campground.images[0].url %>" alt="">
                        <% } else { %>
                        <img class="img-fluid" src='https://res.cloudinary.com/dpsc6auav/image/upload/v1745908856/YelpCamp/i9yvwk7yadoe9qnf4io8.jpg' alt="">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= campground.title %></h5>
                            <p class="card-text"><%= campground.description %></p>
                            <p class="card text">
                                <small class="taxt-muted"><%= campground.location %></small>
                            </p>
                            <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>"><%= campground.title %>の詳細</a>
                        </div>
                    </div>
                </div>
            </div>
                <% } %>
