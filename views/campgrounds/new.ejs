<%- layout("layouts/boilerplate") %>
<div class="row">
<h1 class="text-center">新規登録</h1>
<div class="offset-3 col-6">
    <!-- <form action="/campgrounds" method="post" novalidate class="validated-form" > -->
    <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">
<div class="mb-3">
        <label class="form-label" for="title">タイトル</label>
        <input
        class="form-control"
        type="text"
        name="campground[title]"
        id="title"
        placeholder="タイトルを入力"
        required
        />
    </div>
    <div class="mb-3">
        <label class="form-label" for="location">場所</label>
        <input
        class="form-control"
        type="text"
        name="campground[location]"
        id="location"
        placeholder="場所を入力"
        required
        />
    </div>
    <div class="mb-3">
        <!-- <label class="form-label" for="image">画像URL</label>
        <input
        class="form-control"
        type="text"
        name="campground[image]"
        id="image"
        placeholder="画像URLを入力"
        required
        /> -->
        <input type="file" name="image" multiple>
    </div>
    <div class="mb-3">
        <label class="form-label" for="price">価格</label>
        <div class="input-group mb-3">
        <span class="input-group-text" id="price-label">￥</span>
        <input
            type="text"
            class="form-control"
            placeholder="0"
            aria-label="価格"
            aria-describedby="price-label"
            id="price"
            name="campground[price]"
            required
        />
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="description">説明</label>
        <textarea
        class="form-control"
        type="text"
        name="campground[description]"
        id="description"
        required
        ></textarea>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-outline-dark">登録する</button>
    </div>
    </form>
    <a href="/campgrounds">キャンプ場一覧へ</a>
</div>
</div>
